{
    "compilerOptions": {
        "target": "ES2016",
        "lib": ["DOM", "es2017", "es2020"],
        "outDir": "build/main",
        "rootDir": "src",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/flycheck*"]
}
