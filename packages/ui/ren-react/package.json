{
    "name": "@renproject/ren-react",
    "version": "2.2.3",
    "description": "Easily create and track RenVM transactions in React",
    "keywords": [
        "renvm",
        "ren",
        "bitcoin",
        "web3",
        "ethereum"
    ],
    "main": "dist/main/index.js",
    "typings": "dist/main/index.d.ts",
    "module": "dist/modern/index.js",
    "umd:main": "dist/umd/index.js",
    "notes": "Presently babel-loader must be 8.1.0, all other dependecies should be upgradable, webpack dependency was added to facilitate process.env and Snowpack alias to work with Storybook",
    "repository": {
        "type": "git",
        "url": "https://github.com/renproject/packages/ui/ren-react"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "clean": "yarn rimraf ./dist ./node_modules",
        "build": "rollup -c",
        "watch": "rollup -c --watch",
        "test": "run-s test:unit test:lint test:build",
        "test:unit": "tsdx test",
        "test:lint": "eslint src/**/*.ts",
        "test:build": "run-s build",
        "lint:fix": "prettier-eslint '**/*.{ts,tsx}' --write",
        "prepublish": "yarn build"
    },
    "author": "",
    "license": "MIT",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx}": [
            "npm run lint:fix"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.10.3",
        "@babel/preset-env": "^7.10.3",
        "@babel/preset-react": "^7.10.1",
        "@babel/preset-typescript": "^7.13.0",
        "@open-wc/webpack-import-meta-loader": "^0.4.7",
        "@renproject/chains-bitcoin": "^2.2.3",
        "@renproject/chains-ethereum": "^2.2.3",
        "@renproject/ren": "^2.2.3",
        "@rollup/plugin-alias": "^3.1.1",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^18.0.0",
        "@rollup/plugin-node-resolve": "^11.2.1",
        "@rollup/plugin-typescript": "^8.2.1",
        "@testing-library/jest-dom": "^5.10.1",
        "@testing-library/react": "^11.2.3",
        "@testing-library/user-event": "^12.0.7",
        "@xstate/react": "^1.3.1",
        "babel-eslint": "^10.0.3",
        "babel-loader": "8.1.0",
        "babel-plugin-macros": "^3.0.1",
        "eslint": "^7.17.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-config-standard-react": "^11.0.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "gh-pages": "3.1.0",
        "lint-staged": "^10.2.11",
        "prettier": "^2.2.1",
        "prettier-eslint-cli": "^5.0.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-test-renderer": "^17.0.1",
        "replace-in-file": "^6.1.0",
        "rimraf": "^3.0.2",
        "rollup": "^2.36.2",
        "rollup-plugin-peer-deps-external": "^2.2.2",
        "webpack": "^5.15.0",
        "xstate": "^4.17.0"
    },
    "peerDependencies": {
        "@renproject/chains-bitcoin": "^2.1.7",
        "@renproject/chains-ethereum": "^2.1.7",
        "@renproject/ren": "^2.1.7",
        "@renproject/ren-tx": "^2.1.7",
        "@xstate/react": "^1.3.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "xstate": "^4.17.0"
    },
    "files": [
        "dist"
    ],
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
